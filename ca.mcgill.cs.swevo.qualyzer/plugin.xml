<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ca.mcgill.cs.swevo.qualyzer.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="ca.mcgill.cs.swevo.qualyzer.Perspective"
            id="ca.mcgill.cs.swevo.qualyzer.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="ca.mcgill.cs.swevo.qualyzer.projectexplorer"
            name="Project Explorer"
            restorable="true">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ca.mcgill.cs.swevo.qualyzer.application"
            name="Qualyzer">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Qualyzer">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="ca.mcgill.cs.swevo.qualyzer.projectexplorer">
      </viewer>
      <viewerContentBinding
            viewerId="ca.mcgill.cs.swevo.qualyzer.projectexplorer">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.closedProject">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="ca.mcgill.cs.swevo.qualyzer.projectexplorer">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="ca.mcgill.cs.swevo.qualyzer.handlers.ExitHandler"
            id="ca.mcgill.cs.swevo.qualyzer.commands.exit"
            name="E&amp;xit">
      </command>
      <command
            defaultHandler="ca.mcgill.cs.swevo.qualyzer.handlers.SetupHandler"
            id="ca.mcgill.cs.swevo.qualyzer.commands.setup"
            name="Setup">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="&amp;File">
            <command
                  commandId="ca.mcgill.cs.swevo.qualyzer.commands.setup"
                  label="&amp;Setup"
                  style="push"
                  tooltip="Set up the workspace">
            </command>
            <separator
                  name="fileMenu/lastSeparator"
                  visible="true">
            </separator>
            <command
                  commandId="ca.mcgill.cs.swevo.qualyzer.commands.exit"
                  label="E&amp;xit"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
